<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paralogin3" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/background_carddos"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            android:shadowColor="@color/vino"
            android:fontFamily="@font/chocolates"
            android:shadowRadius="5"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/vino"
            android:textSize="35sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtnomus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_border"
            android:drawableLeft="@drawable/ic_person"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:hint="Nombre de Usuario"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColorHint="@color/dark_gray" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_contr"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:hint="Contraseña"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/dark_gray" />



        <Button
            android:id="@+id/btnRegistrarmeN"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="REGISTRARME"
            android:layout_marginTop="50dp"
            android:textColor="@color/textcolorbuttonmain"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="alta_registro"
            android:background="@drawable/button_backgroundlogin"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paralogin6" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATRÁS"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/selector_botonpresionar"/>


</androidx.constraintlayout.widget.ConstraintLayout>